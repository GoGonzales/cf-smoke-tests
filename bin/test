#!/bin/bash

set -e -x

if ! which go 2>/dev/null; then
  echo "Go is not installed."
  exit 1
fi

local_gopath=$PWD/vendor

mkdir -p $local_gopath/bin

export GOPATH=$local_gopath:$GOPATH
export PATH=$local_gopath/bin:$PATH

go install -v github.com/cloudfoundry/cf-smoke-tests/vendor/github.com/onsi/ginkgo/ginkgo
ginkgo -r --succinct -slowSpecThreshold=300 "$@"

